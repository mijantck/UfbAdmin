<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:backgroundTint="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="10"
            android:layout_margin="10dp"
            android:background="@drawable/bg_stroke_green"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxLines="1"
                        android:id="@+id/coinTask"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="0.10"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/nameTask"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="123456789"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="YT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/TaskType"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TaskId"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/bg_stroke_ayas"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="RMT123456"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/TaskTime"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_stroke_ayas"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="RMT123456"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/categotyImage"
                android:src="@drawable/youtube_logo"
                android:layout_width="50sp"
                android:layout_height="50sp"/>

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
